.PHONY: build test clean run

build:
	@echo "Building the project..."

# Example test target
test:
	@echo "Running tests..."
	python -m pytest

# Clean build artifacts
clean:
	@echo "Cleaning build artifacts..."
	rm -rf __pycache__ *.pyc

# Run the application
run:
	@echo "Starting the application..."
	python -m mcp.main
